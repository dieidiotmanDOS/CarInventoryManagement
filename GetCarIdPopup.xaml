<Window x:Class="CarInventoryManagement.GetCarIdPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarInventoryManagement"
        mc:Ignorable="d"
        Title="Get Car ID" Height="190" Width="320"
        ResizeMode="NoResize">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Margin="0,22,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="42" Width="272"><Run Text="Enter the Car ID of the car you wish to sell / delete:"/><LineBreak/><Run Text="&#x9;&#x9;Example: C"/><Run Language="en-gb" Text="AR"/><Run Text="3"/></TextBlock>
        <TextBox x:Name="CarIdTextbox" HorizontalAlignment="Center" Height="23" Margin="0,99,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="188" TextChanged="CarIdTextbox_Changed"/>
        <TextBlock x:Name="SearchResultTextblock" HorizontalAlignment="Center" Margin="0,69,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="en-gb"/></TextBlock>
        <Button x:Name="ConfirmButton" Content="Confirm" HorizontalAlignment="Center" Margin="0,127,0,0" VerticalAlignment="Top" Width="76" Click="ConfirmButton_Click"/>

    </Grid>
</Window>
